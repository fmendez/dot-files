[user]
	email = fmendez.paradis@gmail.com
	name = Fernando Mendez
[push]
	default = simple
[core]
	editor = code --wait
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[gc]
	auto = 200
[diff]
    tool = vscode
[difftool "vscode"]
    cmd = code --wait --diff $LOCAL $REMOTE
[merge]
    tool = vscode
[mergetool "vscode"]
    cmd = code --wait $MERGED
